programa
{
	funcao inicio()
	{
		real n1, n2, s, m
		escreva("Digite um numero? ")
		leia(n1)	
		escreva("Digite outro numero? ")
		leia(n2)

	/*	
	 * 	TAMBEM FUNCIONA ASSIM
	 * 	
	 * 	escreva("Digite dois numeros? ")
		leia(n1,n2)

		*/
		s = n1+n2
		m = s/2
		escreva("A soma entre esses numeros é ",s, " e a media é ",m)
	}
}
